default:
  suites:
    default:
      contexts:
        - FeatureContext
        - Drupal\DrupalExtension\Context\DrushContext
        - Drupal\DrupalExtension\Context\MessageContext
        - Drupal\nexteuropa\Context\DrupalContext
        - Drupal\nexteuropa\Context\MinkContext
        - Drupal\nexteuropa\Context\CKEditorContext
        - Drupal\DrupalExtension\Context\MarkupContext
        - Drupal\nexteuropa\Context\TaxonomyContext
      filters:
        tags: "~@communities&&~@wip&&@i18n"
  extensions:
    Behat\MinkExtension:
      browser_name: chrome
      javascript_session: 'selenium2'
      base_url: '{{ behat.base_url }}'
      sessions:
        default:
          selenium2:
            wd_host: "http://127.0.0.1:4444/wd/hub"
      files_path: '{{ platform.build.dir }}'
    Drupal\DrupalExtension:
      api_driver: 'drupal'
      blackbox: ~
      drupal:
        drupal_root: '{{ platform.build.dir }}'
      selectors:
        message_selector: '.messages'
        error_message_selector: '.messages.error'
        success_message_selector: '.messages.status'
        warning_message_selector: '.messages.warning'
      subcontexts:
        paths:
          - '{{ behat.subcontexts.path }}'
      drush:
        root: '{{ platform.build.dir }}'
        binary: "{{ drush.bin }}"
      region_map:
        admin_menu: "#admin-menu-menu"
        content_top: ".region-content-top"
        header_top: ".region-header-top"
        header: "#layout-header"
        primary_tabs: ".tabs-primary"
        content: "#layout-body"
        footer: "#layout-footer"
  formatters:
    {{ behat.formatter.name }}: ~

communities:
  suites:
    default:
      contexts:
        - FeatureContext
        - Drupal\DrupalExtension\Context\DrushContext
        - Drupal\DrupalExtension\Context\MessageContext
        - Drupal\nexteuropa\Context\DrupalContext
        - Drupal\nexteuropa\Context\MinkContext
        - Drupal\nexteuropa\Context\CKEditorContext
        - Drupal\nexteuropa\Context\TaxonomyContext
      filters:
        tags: "@communities&&~@wip&&@i18n"
  extensions:
    Behat\MinkExtension:
      browser_name: chrome
      javascript_session: 'selenium2'
      base_url: '{{ behat.base_url }}'
      sessions:
        default:
          selenium2:
            wd_host: "http://127.0.0.1:4444/wd/hub"
    Drupal\DrupalExtension:
      api_driver: 'drupal'
      blackbox: ~
      drupal:
        drupal_root: '{{ platform.build.dir }}'
      selectors:
        message_selector: '.messages'
        error_message_selector: '.messages.error'
        success_message_selector: '.messages.status'
      subcontexts:
        paths:
          - '{{ behat.subcontexts.path }}'
      region_map:
        content_top: ".region-content-top"
        header_top: ".region-header-right"
        header: "#layout-header"
        primary_tabs: ".tabs-primary"
        content: "#layout-body"
        footer: "#layout-footer"
  formatters:
    {{ behat.formatter.name }}: ~
